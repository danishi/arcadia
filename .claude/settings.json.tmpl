{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Edit",
      "Read",
      "Write",
      "LS",
      "Glob",
      "Grep",
      "NotebookEdit",
      "Bash(*)",
      "WebSearch",
      "WebFetch(domain:*)",
      "Skill(*)",
      "mcp__context7__*",
      "mcp__drawio__*"
    ],
    "deny": [
      "Bash(sudo *)",
      "Bash(su *)",
      "Bash(chmod 777 *)",
      "Bash(chmod +s *)",
      "Bash(chown root *)",
      "Read(.env*)",
      "Write(.env*)",
      "Edit(.env*)",
      "Read(**/*.pem)",
      "Read(**/*.key)",
      "Write(**/*.pem)",
      "Write(**/*.key)",
      "Read(**/*credential*)",
      "Write(**/*credential*)",
      "Read(~/.ssh/*)",
      "Read(~/.aws/credentials)",
      "Read(~/.config/gcloud/*)",
      "Bash(rm -rf /)",
      "Bash(rm -rf /*)",
      "Bash(rm -rf ~)",
      "Bash(rm -rf ~/*)",
      "Bash(mkfs*)",
      "Bash(dd if=*)",
      "Bash(curl * | bash)",
      "Bash(curl * | sh)",
      "Bash(wget * | bash)",
      "Bash(wget * | sh)",
      "Bash(git push --force *)",
      "Bash(git push -f *)",
      "Write(/etc/*)",
      "Write(/usr/*)",
      "Write(/sys/*)",
      "Write(/proc/*)"
    ],
    "defaultMode": "acceptEdits"
  },
  "statusLine": {
    "type": "command",
    "command": "input=$(cat); PCT=$(echo \"$input\" | jq -r '.context_window.used_percentage // 0' | cut -d. -f1); COST=$(echo \"$input\" | jq -r '.cost.total_cost_usd // 0'); MODEL=$(echo \"$input\" | jq -r '.model.display_name // \"?\"'); DIR=$(echo \"$input\" | jq -r '.workspace.current_dir // \".\"'); BRANCH=$(cd \"$DIR\" 2>/dev/null && git rev-parse --abbrev-ref HEAD 2>/dev/null || echo '-'); LA=$(echo \"$input\" | jq -r '.cost.total_lines_added // 0'); LD=$(echo \"$input\" | jq -r '.cost.total_lines_removed // 0'); PCT=${PCT:-0}; F=$((PCT*10/100)); [ $F -gt 10 ] && F=10; E=$((10-F)); BAR=''; [ $F -gt 0 ] && BAR=$(printf \"%${F}s\" | tr ' ' '#'); [ $E -gt 0 ] && BAR=\"${BAR}$(printf \"%${E}s\" | tr ' ' '-')\"; if [ $PCT -ge 80 ]; then C='\\033[1;31m'; elif [ $PCT -ge 50 ]; then C='\\033[1;33m'; else C='\\033[1;32m'; fi; R='\\033[0m'; printf \"\\033[1;34m%s${R} | \\033[1;32m%s${R} | \\033[1;33m%s${R} | ${C}[%s]${R} %s%% | \\033[1;36m$%.2f${R} | \\033[32m+%s${R} \\033[31m-%s${R}\" \"$MODEL\" \"$(basename \"$DIR\")\" \"$BRANCH\" \"$BAR\" \"$PCT\" \"$COST\" \"$LA\" \"$LD\""
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "if [ \"$(uname)\" = \"Darwin\" ]; then afplay /System/Library/Sounds/Glass.aiff & osascript -e 'display notification \"Claude Code is requesting permission\" with title \"Claude Code\" subtitle \"Awaiting confirmation\"'; fi"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "if [ \"$(uname)\" = \"Darwin\" ]; then afplay /System/Library/Sounds/Hero.aiff & osascript -e 'display notification \"Task completed\" with title \"Claude Code\" subtitle \"Process finished\"'; fi"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "example-skills@anthropic-agent-skills": true,
    "document-skills@anthropic-agent-skills": true
  },
  "language": "Japanese",
  "alwaysThinkingEnabled": true,
  "effortLevel": "high",
  "enabledMcpjsonServers": [
    "context7",
    "drawio"
  ],
  "enableAllProjectMcpServers": true,
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1",
    "ENABLE_TOOL_SEARCH": "1",
    "CLAUDE_CODE_MAX_AGENT_TURNS": "10"
  }
}
